<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>Accueil</servlet-name>
        <servlet-class>servlet.ServletAccueil</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Accueil</servlet-name>
        <url-pattern>/Accueil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Activites</servlet-name>
        <servlet-class>servlet.ServletActivites</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Activites</servlet-name>
        <url-pattern>/Activites</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MonCompte</servlet-name>
        <servlet-class>servlet.ServletMonCompte</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MonCompte</servlet-name>
        <url-pattern>/MonCompte</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Amis</servlet-name>
        <servlet-class>servlet.ServletAmis</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Amis</servlet-name>
        <url-pattern>/Amis</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error404.html</location>
    </error-page>

</web-app>